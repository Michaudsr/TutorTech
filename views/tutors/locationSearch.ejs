<h1>Tutors by Location</h1>

<div>   <a href="/student">Back to Search</a>   </div>

<% tutors.forEach(t => { %>
    <p>
    <div class="pure-u-1 pure-u-md-1-3"> 
    <form method="GET" action="/tutor/profile/<%= t.id %>"> 
    <input type="hidden" name="id" value="<%= t.id %>">
    <button type='submit'>
    <%= t.firstName %>
    <%= t.lastName %>
    </button>
    </form>
    </div>      
    <div class="pure-u-1 pure-u-md-1-3"> 
        <%= t.user %>
    </div>
    <div class="pure-u-1 pure-u-md-1-3"> 
        <%= t.city %>,
        <%= t.state %>
    </div>   
    <div class="pure-u-1 pure-u-md-1-3"> 
        <%= t.description %>
    </div>  
    <div class="pure-u-1 pure-u-md-1-3"> 
        <%= t.rating %>
    </div>
    <div class="pure-u-1 pure-u-md-1-3"> 
    Hourly Rate:$<%= t.hourlyRate %>
    </div>    
        


    </p>
    
  <% }) %>
  


<div id="map">
 <script>
     // let lat = document.getElementById('lat').textContent
     // let long = document.getElementById('long').textContent
     mapboxgl.accessToken = '<%= mapKey %>'
     let map = new mapboxgl.Map({
         container: 'map',
         style: 'mapbox://styles/mapbox/streets-v11',
         center: [<%= match.center[0] %>, <%= match.center[1] %>],
         zoom: 12
     })
     
     geojson.features.forEach((marker)=> {
         let el = document.createElement('div')
         el.className = 'marker'
         new mapboxgl.Marker(el)
         .setLngLat(marker.geometry.coordinates)
         .addTo(map)
     })
 </script>
</div>