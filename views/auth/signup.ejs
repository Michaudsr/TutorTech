<form action="/auth/signup" method="POST">

  <div class="pure-g">
    <div class="pure-u-1 pure-u-md-1-3"> 
      <label for="firstName"></label>
      <input id="firstName" type="text" name="firstName" placeholder="First Name"> 
    </div>
    <div class="pure-u-1 pure-u-md-1-3">  
      <label for="lastName"></label>
      <input id="lastName" type="text" name="lastName" placeholder='Last Name'> 
    </div>
    <div class="pure-u-1 pure-u-md-1-3">    
      <label for="email"></label>
      <input id="email" type="email" name="email" placeholder='Email'> 
    </div>
    <div class="pure-u-1 pure-u-md-1-3">  
      <label for="password"></label>
      <input id="password" type="password" name="password" placeholder='Password'> 
    </div>
    <div class="pure-u-1 pure-u-md-1-3"> 
      <label for="city"></label>
      <input id="city" type="city" name="city" placeholder='City'>
     </div>
    <div class="pure-u-1 pure-u-md-1-3">  
      <label for="state"></label>
      <input id="state" type="state" name="state" placeholder='State'> 
    </div>
    <div class="pure-u-1 pure-u-md-1-3" id='description'>  
      <label for="description"></label>
      <!-- <input name="description" type="text" placeholder="Description" >   -->
      <textarea name="description" id="" cols="25" rows="2" placeholder="Description"></textarea>
      </div>
    <div class="pure-u-1 pure-u-md-1-3">
      <label for="distinction"></label>
      <select name="distinction" id="distinction">
      <option value="student">Student</option>
      <option value="tutor">Tutor</option>
      </select>
     </div>
    <div class="pure-u-1 pure-u-md-1-3">  
      <button>Submit</button>
    </form> 
  </div>
</div>
    
    
   
      
 
      
   
      
    
      
   
      
   
      
    
          
      
      
       
   
 




